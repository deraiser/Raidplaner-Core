<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/5.4/option.xsd">
    <import>
        <categories>
            <category name="rp" />
            <category name="rp.settings">
                <parent>rp</parent>
                <showorder>1</showorder>
            </category>
            <category name="rp.character">
                <parent>rp</parent>
                <showorder>2</showorder>
            </category>
        </categories>
        
        <options>
            <!-- rp.settings -->
            <option name="rp_default_game_id">
                <categoryname>rp.settings</categoryname>
                <optiontype>gameSelect</optiontype>
            </option>
            <!-- /rp.settings -->
            
            <!-- rp.character -->
            <option name="rp_show_twinks">
                <categoryname>rp.character</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>
            </option>
            <option name="rp_enable_rank">
                <categoryname>rp.character</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>
            </option>
            <!-- /rp.character -->
        </options>
    </import>
</data>